.jssc {
	width: 100vw;
	height: 100vh;
	color: #566269;
	max-height: 100vh;
	max-width: 100vw;
	background-color: rgba(255, 255, 255, 0.7);
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	display: none;
	font-family: Arial;

	& .jssc__modal {
		width: 60%;
		height: 50%;
		background-color: white;
		position: relative;
	}

	& .jssc__modal-close {
		width: 20px;
		height: 20px;
		position: absolute;
		top: 25px;
		right: 35px;
		cursor: pointer;
		&:hover {
			opacity: 0.6;
		}
	}

	& .jssc__content {
		width: 80%;
		height: auto;
		margin: auto;
	}

	& .jssc__hat {
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom: solid 2px gray;
		padding: 25px 0;
	}

	& .jssc__type-link {
		display: flex;
		justify-content: center;
		align-items: center;
		cursor: pointer;
		user-select: none;
		&:hover {
			opacity: 0.8;
		}
	}

	& .jssc__type-link-img {
		width: 45px;
		height: 45px;
		margin-left: 10px;
		border-radius: 100px;
	}

	& .jssc__type-link-img_temp {
		background-color: #FBF261;
	}

	& .jssc__type-link-img_wave {
		/* background-color: #F93B1C; */
		/* background: linear-gradient(45deg, #000 0%, #7100C4 44%, #004DFF 48.5%, #00B8D9 50%, #00C43A 56.5%, #FFFF00 59%, #FF8C00 62.5%, #FF0000 74%, #000 100%); */
		background: linear-gradient(-45deg, #000, #7100C4, #004DFF, #00B8D9, #00C43A, #FFFF00, #FF8C00, #FF0000, #000);
	}

	& .jssc__color-palette {
		width: 100%;
		height: 100px;
		margin-top: 100px;
		border-top: solid 2px gray;
		border-bottom: solid 2px gray;
	}

	& .jssc__color-palette_temp {
		background-color: #FBF261;
	}

	& .jssc__color-palette_wave {
		/* background-color: #F93B1C; */
		/* background: linear-gradient(90deg, #000 0%, #7100C4 44%, #004DFF 48.5%, #00B8D9 50%, #00C43A 56.5%, #FFFF00 59%, #FF8C00 62.5%, #FF0000 74%, #000 100%); */
		background: linear-gradient(90deg, #000, #7100C4, #004DFF, #00B8D9, #00C43A, #FFFF00, #FF8C00, #FF0000, #000);
	}

	& .jssc__marking {
		display: flex;
		justify-content: space-between;
		font-size: 0.7vw;
		font-weight: bold;
		padding: 10px 0;
	}

	& .jssc__temp-sectors {
		display: flex;
		justify-content: space-between;
		text-transform: uppercase;
	}
}