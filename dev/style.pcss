.jssc {
	width: 100vw;
	height: 100vh;
	max-height: 100vh;
	max-width: 100vw;
	background-color: rgba(255, 255, 255, 0.7);
	position: absolute;
	top: 0;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;

	& .jssc__modal {
		width: 100px;
		height: 100px;
		background-color: gold;
	}
}